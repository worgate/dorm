<% include ../partials/header %>
<div class="container margin_top">
    <div class="row">
        <h1 style="text-align: center">Edit <%= dormitory.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/sut/<%= dormitory._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="dormitory[name]" value="<%= dormitory.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="dormitory[image]" value="<%= dormitory.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="dormitory[description]" value="<%= dormitory.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>